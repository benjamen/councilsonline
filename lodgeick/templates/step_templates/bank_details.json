{
  "template_name": "bank_details",
  "template_title": "Bank Account Details Template",
  "description": "Standard bank account information for payment processing (payouts TO applicant)",
  "version": "1.0",
  "step_config": {
    "step_code": "bank_details",
    "step_title": "Bank Account Details",
    "step_component": "DynamicStepRenderer",
    "is_enabled": 1,
    "is_required": 1,
    "show_on_review": 0,
