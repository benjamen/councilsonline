      "is_enabled": 1,
      "is_required": 1,
      "show_on_review": 0,
      "fields": [
        {
          "field_name": "account_holder_name",
          "field_label": "Account Holder Name",
          "field_type": "Data",
          "is_required": 1,
          "show_on_review": 0,
          "description": "Name as it appears on the bank account"
        },
        {
          "field_name": "bank_name",
          "field_label": "Bank Name",
          "field_type": "Data",
          "is_required": 1,
          "show_on_review": 0,
          "description": "Full name of the bank"
        },
        {
          "field_name": "account_number",
          "field_label": "Account Number",
          "field_type": "Data",
          "is_required": 1,
          "show_on_review": 0,
          "description": "Your bank account number"
        },
        {
          "field_name": "account_type",
          "field_label": "Account Type",
          "field_type": "Select",
          "is_required": 1,
          "show_on_review": 0,
          "options": "Savings\nChecking\nCurrent",
